<%- include('include/_header') %>
<nav class="navbar navbar-default">

  <ul class="navbar-nav nav">
    <%for(i=0;i<nav.length;i++){%>
    <li class="nav-item"><a href="<%=nav[i].link%>" class="nav-link"><%=nav[i].name%></a></li>
    <%}%>
  </ul>
</nav>
   <section class="form">
    <div class="container mt-4 ">
     <div class="row">
         <div class="col-lg-12">
          <!-- <button class="btn btn-outline-info mt-5 ml-5 mb-4">All Users</button> -->
          <a href="/viewuser" class="mt-5 ml-5 mb-4" style="text-decoration: none;">All User <%=val%></a>
         </div>
     </div>
    </div>
    <div class="container  justify-content-center align-items-center ">
      <div class="row align-item-center">
        <div class="col-lg-12 ">
         <h4 class="text-center"><%=data %></h4>
         <p class="text-center text-secondary ">Use the below form to create a new account</p>
         <div class="container-fluid">
          <div class="container">
            <form action="/add" method="post">
              <div class="form-group">
                  <label for="formGroupExampleInput">Name</label>
                  <input type="text" class="form-control" id="formGroupExampleInput" name="uname" placeholder="abc" required>
                </div>
                <div class="form-group">
                  <label for="exampleFormControlInput1">Email</label>
                  <input type="email" class="form-control" id="exampleFormControlInput1" name="email" placeholder="name@example.com" required>
                </div>
                <label>Gender</label>
                <div class="form-check form-check-inline ">
                  <input class="form-check-input ml-2" type="radio" name="gender"  id="inlineRadio1" value="male" required>
                  <label class="form-check-labe " for="inlineRadio1">Male</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input ml-3 " type="radio" name="gender" id="inlineRadio2" value="female" required>
                  <label class="form-check-label" for="inlineRadio2">Female</label>
                </div><br>
                <label>Status</label>
                <div class="form-check form-check-inline ">
                  <input class="form-check-input ml-3" type="radio" name="status" id="inlineRadio1" value="active" required>
                  <label class="form-check-labe " for="inlineRadio1">Active</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input ml-2 " type="radio" name="status" id="inlineRadio2" value="inactive" required>
                  <label class="form-check-label" for="inlineRadio2">Inactive</label>
                </div><br>
              <button type="submit" class="btn btn-primary w-100">Save</button>
            </form>
          </div>
      </div>
    </div>
  </div>
</div>
</section>
<%- include('include/_footer')%>